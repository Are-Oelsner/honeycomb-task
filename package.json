{
  "name": "neuro-task",
  "description": "Starter app for jsPsych + react + electron neuro tasks",
  "author": {
    "name": "Brown CCV",
    "email": "ccv-bot@brown.edu",
    "url": "ccv.brown.edu"
  },
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "main": "src/electron-starter.js",
  "homepage": "https://github.com/brown-ccv/neuro-task-starter",
  "repository": "https://github.com/brown-ccv/neuro-task-starter",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.10.2",
    "bootstrap": "^4.3.1",
    "event-marker": "git+https://github.com/brown-ccv/event-marker.git",
    "jquery": "^3.4.1",
    "jspsych-react": "^0.3",
    "lodash": "^4.17.15",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "^3"
  },
  "scripts": {
    "start": "BROWSER=none NODE_PATH=./src react-scripts start",
    "test": "react-scripts test",
    "build": "react-scripts build",
    "package:windows": "electron-packager . --platform win32 --arch x64 --out dist/ --overwrite",
    "package:mac": "electron-packager . --platform darwin --arch x64 --out dist/ --overwrite",
    "package:linux": "electron-packager . --platform linux --arch x64 --out dist/ --overwrite",
    "postpackage:windows": "electron-installer-windows --src dist/neuro-task-win32-x64/ --dest dist/installers/ --overwrite",
    "postpackage:mac": "electron-installer-dmg dist/neuro-task-darwin-x64/neuro-task.app neuro-task --out dist/installers/ --overwrite",
    "postpackage:linux": "electron-installer-debian --src dist/neuro-task-linux-x64/ --dest dist/installers/ --arch x64 --overwrite",
    "postinstall": "npm rebuild",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "dev": "concurrently --kill-others \"npm:start\" \"sleep 5 && npm run electron-dev\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-plugin-macros": "^2.6.1",
    "chai": "^4.2.0",
    "concurrently": "^4.1.2",
    "electron": "^6",
    "electron-packager": "^14.0.5",
    "electron-rebuild": "^1.8.6",
    "eslint": "*",
    "eslint-config-standard": "^14",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "require-context.macro": "^1.1.1"
  },
  "babel": {
    "plugin": [
      "macros"
    ]
  },
  "optionalDependencies": {
    "electron-installer-debian": "^2.0.0",
    "electron-installer-dmg": "^3.0.0",
    "electron-installer-windows": "^2.0.0"
  }
}
